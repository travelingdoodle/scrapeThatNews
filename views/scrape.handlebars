<div class="contianer">
    <div class="col-lg-12 jumbotron tex-center">
        <h1>Saved Articles!</h1>
        <h3>Take another look at important aricles</h3>
    </div>
</div>
<div class="col-md-12">
    {{#if article}}
        {{#each article}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>{{this.title}}</h4>
                    <button type="button" class="btn btn-success addNote" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>Article Notes</button>
                    <button type="button" class="btn btn-danger delete" data-id={{this._id}}>Delete</button>
                </div>
                <div class="panel-body">
                    <p> {{this.summary}}</p>
                    <a href={{this.link}} target="_blank">{{this.link}}</a>
                    <br>
                </div>
            </div>
        {{/each}}
    {{else}}
    <div class="panel panel-default">
        <div class="panel-body">
            <h4>You have not saved any articles yet :-(</h4>
        </div>
    </div>
    {{/if}}
</div>

{{#each article}}
    {{> notes }}
{{/each}}